---
import SocialPill from "./SocialPill.astro";
import LinkIcon from "./icons/LinkIcon.astro";
import GitHubIcon from "./icons/GitHubIcon.astro";
import HTML5Icon from "./icons/HTML5Icon.astro";
import JavaScriptIcon from "./icons/JavaScriptIcon.astro";
import ReactIcon from "./icons/ReactIcon.astro";
import AstroIcon from "./icons/AstroIcon.astro";
import TailwindIcon from "./icons/TailwindIcon.astro";
import VercelIcon from "./icons/VercelIcon.astro";

const TAGS = {
  HTML5: {
    name: "HTML5",
    class: "bg-orange-400/20 text-white/90",
    icon: HTML5Icon,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-yellow-400/20 text-white/90",
    icon: JavaScriptIcon,
  },
  REACT: {
    name: "React",
    class: "bg-cyan-400/20 text-white/90",
    icon: ReactIcon,
  },
  ASTRO: {
    name: "Astro",
    class: "bg-fuchsia-400/20 text-white/90",
    icon: AstroIcon,
  },
  TAILWIND: {
    name: "Tailwind",
    class: "bg-sky-400/20 text-white/90",
    icon: TailwindIcon,
  },
  VERCEL: {
    name: "Vercel",
    class: "bg-neutral-400/20 text-white/90",
    icon: VercelIcon,
  },
};

const PROJECTS = [
  {
    title: "Tarimas Industriales Rivera - Landing Site",
    description:
      "Sitio web corporativo desarrollado para presentar los servicios, productos y valores de Tarimas Industriales Rivera, asÃ­ como facilitar el contacto con clientes actuales y potenciales.",
    link: "https://tarimas-industriales-rivera-web.vercel.app/",
    github: "https://github.com/RiviCodes/tarimas-industriales-rivera-web",
    image: "/projects/svgl.webp",
    tags: [TAGS.JAVASCRIPT, TAGS.ASTRO, TAGS.TAILWIND, TAGS.VERCEL],
  },
];
---

{
  PROJECTS.map(({ title, description, link, github, image, tags }) => (
    <article>
      <h3 class="mb-4 text-2xl font-semibold text-[#e4e6eb]">{title}</h3>

      <ul class="flex flex-row flex-wrap gap-x-2">
        {tags.map((tag) => (
          <li class="mb-2 md:mb-1">
            <span
              class={`flex gap-x-2 rounded-full px-3 py-2 text-xs ${tag.class}`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>

      <a href={link} target="_blank" rel="noopener norefferer">
        <img
          class="mt-2 rounded shadow-2xl shadow-white/30 transition hover:scale-101"
          src={image}
          alt={`Captura de pantalla del proyecto ${title}`}
        />
      </a>

      <p class="mt-6 mb-8 text-lg text-pretty text-[#9aa0a6] md:text-lg">
        {description}
      </p>

      <div class="mb-16 flex flex-wrap gap-4">
        <SocialPill href={link}>
          <LinkIcon class="size-4 md:size-6" />
          Visitar sitio
        </SocialPill>
        <SocialPill href={github}>
          <GitHubIcon class="size-4 md:size-6" />
          Ver en GitHub
        </SocialPill>
      </div>
    </article>
  ))
}
